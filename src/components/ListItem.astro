---
interface Props {
  href?: string;
  header?: boolean;
  text: string;
}

const { href = "", header = false, text } = Astro.props;
---

<li class={header ? "header" : ""}>
  {
    href === "" ? (
      <span>{text}</span>
    ) : (
      <a href={href}>
        <span>{text}</span>
      </a>
    )
  }
</li>

<style>
  li {
    all: unset;
    display: block;
    border-top: 1px solid #ddd;
    padding-inline: 1rem;
    padding-block: 0.5rem;
  }

  li.header {
    background-color: #ddd;
    font-weight: bold;
  }

  li:first-child {
    border: none;
  }

  a {
    color: royalblue;
    text-decoration: none;
  }
</style>
