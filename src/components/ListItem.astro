---
interface Props {
  href?: string;
}

const { href = "" } = Astro.props;
---

<li>
  {
    href == "" ? (
      <slot />
    ) : (
      <a href={href}>
        <slot />
      </a>
    )
  }
</li>

<style>
  li {
    all: unset;
    display: block;
    border-top: 1px solid #ddd;
    padding-inline: 1rem;
    padding-block: 0.5rem;
  }

  li:first-child {
    border: none;
  }

  a {
    color: royalblue;
    text-decoration: none;
  }
</style>
